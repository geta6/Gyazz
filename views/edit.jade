doctype html
html
  head
    meta(charset='utf-8')
    title #{wiki} / #{title}
    link(rel="stylesheet",href="/stylesheets/gyazz.css",type="text/css")
    link(rel="shortcut icon",href="/favicon.ico")
    script(src="/javascripts/jquery.js")
    script(src="/socket.io/socket.io.js")
    script.
      var wiki = unescape("!{escape(wiki)}");
      var title = unescape("!{title}");
      var do_auth = false;
      var writable = true;
      var version = "#{version}";

    script(src='/javascripts/utf.js')
    script(src='/javascripts/md5.js')
    script(src='/javascripts/underscore.js')

    script(src='/javascripts/gyazz_tag.js')
    script(src='/javascripts/gyazz_location.js')
    script(src='/javascripts/gyazz_edit.js')

  body
    - var writable = true
    div.title
      span.wordtitle
        img#historyimage(src="/#{wiki}/#{title}/modify.png",height=18,width=80)
        | &nbsp;
        if writable
          a#title(href="/#{wiki}/#{title}") #{title}
        else
          | #{title}

      span#debug

      form.search(action="/#{wiki}/__search", method="get")
        input#search(name='q', type='text', value="", placeholder="リスト / 検索")

    p

    textarea#contents(rows='40', cols='100')
